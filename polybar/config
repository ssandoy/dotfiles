font-1 = Inconsolata Nerd Font Mono:pixelsize=12
font-2 = siji:pixelsize=10;1

modules-left = i3
modules-center = date
modules-right = xbacklight pulseaudio memory cpu wireless-network eth battery temperature powermenu

tray-position = center
